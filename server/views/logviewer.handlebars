<div class="container mt-5">
    <h1>Log File Graphs</h1>
    <div class="card">
        <div class="card-body">
            <form action="/graph" method="GET" class="mb-3">
                <div class="row">
                    <div class="col-11">
                        <select class="form-select" name="logfile" id="logfile">
                            {{#each logfiles}}
                                <option value={{this}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-1">
                        <input type="submit" class="btn btn-primary" value="Graph">
                    </div>
                </div>
            </form>
            <a href="/graph?logfile={{mostRecent}}" class="btn btn-primary">Most Recent Log File</a>
        </div>
    </div>
</div>
